<h1><%= Company.model_name.human(count: 2) %></h1>

<%= form_with url: companies_path, method: :get do %>
  <%= label_tag :search, "" %>
  <%= text_field_tag :search, "", placeholder: t(".placeholder_text") %>
  <%= submit_tag t(".search") %>
<% end %>

<% if @companies.empty? %>
  <div class="warning"><%= t(".no_registered_company") %></div>
<% else %>
  <dl>
    <% @companies.each do |company| %>
          <dt><%= Company.human_attribute_name("name") %></dt>
          <dd><%= link_to company.name, company_path(company) %></dd>
          <dt><%= Company.human_attribute_name("cnpj") %></dt>
          <dd><%= company.cnpj %></dd>
          <dt><%= Company.human_attribute_name("site") %></dt>
          <dd><%= company.site %></dd>
          <hr>
    <% end %>
  </dl>
<% end %>

<%= link_to t("misc.back"), root_path %>