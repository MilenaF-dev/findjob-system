<div class="container">
  <h2><%= t(".forgot_your_password") %></h2>


  <div class="row  justify-content-center form-group">
    <div class="col-4">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "candidates/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class: "mb-0" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3" %>
        </div>

        <div class="actions">
          <%= f.submit t(".send_me_reset_password_instructions"), class: "btn btn-outline-secondary mb-2 w-100" %>
        </div>
      <% end %>

      <%= render "candidates/shared/links" %>
    </div>
  </div>
</div>