<div class="container">
  <h2><%= t(".title") %></h2>

  <div class="row  justify-content-center form-group">
    <div class="col-4">
      <div class="edit_form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "candidates/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :full_name, class: "mb-0" %><br />
            <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", class: "form-control mb-3" %>
          </div>

          <div class="field">
            <%= f.label :cpf, class: "mb-0" %><br />
            <%= f.text_field :cpf, autofocus: true, autocomplete: "cpf", class: "form-control mb-3" %>
          </div>

          <div class="field">
            <%= f.label :phone, class: "mb-0" %><br />
            <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: "form-control mb-3" %>
          </div>

          <div class="field">
            <%= f.label :biography, class: "mb-0" %><br />
            <%= f.text_area :biography, autofocus: true, autocomplete: "biography", class: "form-control mb-3" %>
          </div>

          <div class="field">
            <%= f.label :email, class: "mb-0" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div><%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %></div>
          <% end %>

          <div class="field">
            <%= f.label :password, class: "mb-0" %> <i><%= t(".leave_blank_if_you_don_t_want_to_change_it") %></i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <% if @minimum_password_length %>
              <em><%= t(".minimum_of_characters", length: @minimum_password_length) %></em>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: "mb-0 mt-3" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-3" %>
          </div>

          <div class="field">
            <%= f.label :current_password, class: "mb-0" %> <i><%= t(".we_need_your_current_password_to_confirm_your_changes") %></i><br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control mb-3" %>
          </div>

          <div class="actions">
            <%= f.submit t("misc.update"), class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>

      <div class="mt-3">
        <h3><%= t(".cancel_my_account") %></h3>

        <p><%= t(".unhappy") %><%= button_to t(".cancel"), registration_path(resource_name),
                                             data: { confirm: t(".are_you_sure") }, method: :delete, class: "btn btn-outline-secondary" %></p>
      </div>
    </div>
  </div>
</div>
