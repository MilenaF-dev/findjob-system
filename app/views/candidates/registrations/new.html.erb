<h2><%= t(".register")%></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "candidates/shared/error_messages", resource: resource %>

  <%= f.fields_for :company do |cf| %>
    <div class="field">
      <%= f.label :full_name %><br />
      <%= f.text_field :full_name  %>
    </div>

    <div class="field">
      <%= f.label :cpf %><br />
      <%= f.text_field :cpf %>
    </div>

    <div class="field"> 
      <%= f.label :phone %><br />
      <%= f.text_field :phone %>
    </div>

    <div class="field">
      <%= f.label :biography %><br />
      <%= f.text_area :biography %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em><%= t(".minimum_of_characters", length: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t("misc.registration")%>
  </div>
<% end %>

<%= render "candidates/shared/links" %>

<%= link_to t("misc.back"), root_path %>
