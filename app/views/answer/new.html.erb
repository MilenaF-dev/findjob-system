<div class="container">
  <% if @answer.errors.any? %>
    <% @answer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>

  <div class="row  justify-content-center form-group">
    <div class="col-4">
      <%= form_with model: @answer, url: feedback_answer_index_path(@feedback) do |form| %>

        <%= form.hidden_field :accepted %>

        <% if @answer.accepted %>
          <div>
            <%= form.label :start_date, class: "mb-0" %><br>
            <%= form.date_field :start_date, class: "form-control" %>
          </div>

        <% else %>
          <div>
            <%= form.label :reason, class: "mb-0" %><br>
            <%= form.text_area :reason, class: "form-control" %>
          </div>
        <% end %><br>

        <div>
          <%= form.submit t(".send_answer"), class: "btn btn-outline-secondary" %>
        </div>
      <% end %><br>
    </div>
  </div>
</div>